@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                            {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))</td>
                                <td>@(((DateTime)item.Checkout).ToString("dd-MMM-yyyy"))</td>
                                <td><span class="badge badge-primary px-2">@item.Status</span></td>
                                <td><a href="/BookingAdmin/ApprovedReservation2/@item.BookingID" class="btn btn-primary btn-sm">Onayla</a></td>
                                <td><a href="/BookingAdmin/CancelReservation/@item.BookingID" class="btn btn-danger btn-sm">İptal Et</a></td>
                                <td><a href="/BookingAdmin/WaitReservation/@item.BookingID" class="btn btn-warning btn-sm">Beklet</a></td>
                                <td><a href="/BookingAdmin/UpdateBooking/@item.BookingID" class="btn btn-info btn-sm">Güncelle</a></td>
                                <td><a href="/BookingAdmin/UpdateBooking/@item.BookingID" class="btn btn-dark btn-sm">Detaylar</a></td>
                             </tr>
                             }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


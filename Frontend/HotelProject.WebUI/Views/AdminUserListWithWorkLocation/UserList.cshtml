@model List<HotelProject.WebUI.Dtos.AppUserDto.ResultAppUserWithWorkLocationDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="active-member">
                <div class="table-responsive">
                    <table class="table table-xs mb-0">
                        <thead>
                            <tr>
                                <th>Kullanıcı</th>
                                <th>Şehir</th>
                                <th>Ülke</th>
                                <th>Çalıştığı Şube</th>
                                <th>Cinsiyet</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="@item.ImageURL" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                                    <td>@item.City</td>
                                    <td>
                                        <span>@item.Country</span>
                                    </td>
                                    <td>@item.WorkLocationName</td>
                                    @if (item.Gender == "Erkek")
                                    {
                                        <td><i class="fa fa-circle-o text-success  mr-2"></i> @item.Gender</td>
                                    }
                                    @if (item.Gender == "Kadın")
                                    {
                                        <td><i class="fa fa-circle-o text-warning  mr-2"></i> @item.Gender</td>
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Kaydet</a>